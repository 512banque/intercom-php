{
    "name": "Intercom API (Conversation) v3",
    "description": "The Intercom API (Conversation) v3",
    "operations": {
        "createConversation": {
            "httpMethod": "POST",
            "parameters": {
                "body": {
                    "location": "json",
                    "required": true,
                    "type": "string"
                },
                "email": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "user_id": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                }
            },
            "responseClass": "Conversation",
            "responseType": "model",
            "summary": "Creates a new conversation",
            "uri": "/conversations"
        },
        "getConversationByID": {
            "httpMethod": "GET",
            "parameters": {
                "id": {
                    "location": "uri",
                    "required": true,
                    "type": "integer"
                }
            },
            "responseClass": "ConversationPartList",
            "responseType": "model",
            "summary": "Gets a conversation by ID",
            "uri": "/conversations/{id}"
        },
        "getUserConversations": {
            "httpMethod": "GET",
            "parameters": {
                "email": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                },
                "type": {
                    "default": "user",
                    "location": "query",
                    "required": true,
                    "static": true
                },
                "user_id": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                }
            },
            "responseClass": "ConversationList",
            "responseType": "model",
            "summary": "Gets conversations for a user",
            "uri": "/conversations"
        },
        "getUnreadUserConversations": {
            "extends": "getUserConversations",
            "parameters": {
                "unread": {
                    "default": true,
                    "location": "query",
                    "static": true,
                    "required": true
                }
            }
        },
        "getUserConversationsByAdminID": {
            "httpMethod": "GET",
            "parameters": {
                "id": {
                    "location": "query",
                    "required": true,
                    "sentAs": "assignee_identifier",
                    "type": "integer"
                }
            },
            "responseClass": "ConversationsList",
            "responseType": "model",
            "summary": "Gets conversations for a user based on the ID of the admin the conversation is assigned to",
            "uri": "/conversations"
        }
    },
    "models": {
        "ConversationModel": {
            "type": "object",
            "location": "json",
            "properties": {
                "assigned_to": {
                    "type": "object",
                    "properties": {
                        "companies": {
                            "type": "array"
                        },
                        "email": {
                            "type": "string"
                        },
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string",
                        }
                    }
                },
                "created_at": {
                    "format": "timestamp",
                    "type": "integer"
                },
                "id": {
                    "type": "integer"
                },
                "latest_user_visible_comment": {
                    "type": "object",
                    "properties": {
                        "$ref": "ConversationPartModel"
                    }
                },
                "read": {
                    "type": "boolean"
                },
                "updated_at": {
                    "format": "timestamp",
                    "type": "integer"
                },
                "user": {
                    "type": "object",
                    "properties": {
                        "avatar": {
                            "type": "object",
                            "items": {
                                "color": {
                                    "type": "string"
                                },
                                "image_url": {
                                    "type": "string"
                                },
                                "image_urls": {
                                    "type": "object",
                                    "items": {
                                        "large": {
                                            "type": "string"
                                        },
                                        "mini": {
                                            "type": "string"
                                        },
                                        "mini_x2": {
                                            "type": "string"
                                        },
                                        "normal": {
                                            "type": "string"
                                        },
                                        "normal_x2": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "initials": {
                                    "type": "string"
                                }
                            }
                        },
                        "companies": {
                            "type": "array",
                            "items": {
                                "name": "Company",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "email": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "user_created": {
                    "type": "boolean"
                }
            }
        },
        "ConversationListModel": {
            "type": "object",
            "properties": {
                "conversations": {
                    "type": "array",
                    "location": "json",
                    "items": {
                        "$ref": "ConversationModel"
                    }
                }
            }
        },
        "ConversationPartModel": {
            "type": "object",
            "location": "json",
            "properties": {
                "author": {
                    "type": "object",
                    "properties": {
                        "avatar": {
                            "type": "object",
                            "properties": {
                                "image_url": {
                                    "type": "string"
                                }
                            }
                        },
                        "companies": {
                            "type": "array",
                            "items": {
                                "name": "CompanyID",
                                "type": "string"
                            }
                        },
                        "email": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "body": {
                    "type": "string"
                },
                "created_at": {
                    "type": "integer"
                }
            }
        },
        "ConversationPartListModel": {
            "type": "object",
            "properties": {
                "parts": {
                    "type": "array",
                    "location": "json",
                    "items": {
                        "$ref": "ConversationPartModel"
                    }
                }
            }
        }
    }
}