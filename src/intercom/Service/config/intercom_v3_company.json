{
    "name": "Intercom API (Conversation) v3",
    "description": "The Intercom API (Conversation) v3",
    "operations": {
        "createConversation": {
            "httpMethod": "POST",
            "parameters": {
                "body": {
                    "location": "json",
                    "required": true,
                    "type": "string"
                },
                "email": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "user_id": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                }
            },
            "responseClass": "\\Intercom\\Resource\\Conversation",
            "summary": "Creates a new conversation",
            "uri": "/conversations"
        },
        "getUserConversations": {
            "httpMethod": "GET",
            "parameters": {
                "email": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                },
                "type": {
                    "default": "user",
                    "location": "query",
                    "required": true,
                    "static": true
                },
                "user_id": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                }
            },
            "responseClass": "\\Intercom\\Resource\\ConversationList",
            "summary": "Gets conversations for a user",
            "uri": "/conversations"
        },
        "getUserConversationsByAdminID": {
            "httpMethod": "GET",
            "parameters": {
                "id": {
                    "location": "query",
                    "required": true,
                    "sentAs": "assignee_identifier",
                    "type": "integer"
                }
            },
            "responseClass": "\\Intercom\\Resource\\ConversationList",
            "summary": "Gets conversations for a user based on the ID of the admin the conversation is assigned to",
            "uri": "/conversations"
        },
        "getUnreadUserConversations": {
            "extends": "getUserConversations",
            "parameters": {
                "unread": {
                    "default": true,
                    "location": "query",
                    "static": true,
                    "required": true
                }
            }
        }
    }
}